#
# Definition of useful aliases.
#

# Useful commands for clipboard copy/paste.

if command_exists xclip; then
	alias clipcopy='xclip -selection c'
	alias clippaste='xclip -selection clipboard -o'
fi

if command_exists pbcopy; then
	alias clipcopy='pbcopy'
	alias clippaste='pbaste'
fi

# Properly set TERM before SSHing.
alias ssh="TERM=screen ssh"
alias gtypist="gtypist --no-skip"
